#!/bin/bash

export TMPDIR={{ galaxy_tmp_dir }}
export TMP=$TMPDIR
export TEMPDIR=$TMPDIR
export TEMP=$TMPDIR

#needed to address the isilion/nfs issue where EOF errors are happening
#issue and discuss @ https://github.com/galaxyproject/galaxy/issues/7011
#will need to be release specific and only if it exist
#Only set the virtual env if found to be available to use, otherwise use the one found on NFS share
if [ -d "/opt/galaxy/{{ galaxy_release_number }}/venv" ]; then
  export GALAXY_VIRTUAL_ENV=/opt/galaxy/{{ galaxy_release_number }}/venv
fi

